{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Multiple Input",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "Item Description:"
    },
    {
      "type": "Input.Text",
      "placeholder": "Item Description",
      "style": "text",
      "isMultiline": true,
      "maxLength": 0,
      "id": "ItemDescription"
    },
    {
      "type": "TextBlock",
      "text": "Quantity:"
    },
    {
      "type": "Input.Number",
      "placeholder": "Amount",
      "min": 0,
      "max": 999,
      "id": "Amount"
    },
    {
      "type": "TextBlock",
      "text": "First Option:"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "Currency",
      "style": "compact",
      "value": "1",
      "choices": [
        {
          "title": "Option 1",
          "value": "Option 1"
        },
        {
          "title": "Option 2",
          "value": "Option 2"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Unit Price:"
    },
    {
      "type": "Input.Number",
      "placeholder": "Unit Price",
      "min": 0,
      "max": 999,
      "id": "UnitPrice"
    },
    {
      "type": "TextBlock",
      "text": "Second Option:"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "SecondOption",
      "style": "compact",
      "value": "1",
      "choices": [
        {
          "title": "Option 1",
          "value": "Option 1"
        },
        {
          "title": "Option 2",
          "value": "Option 2"
        },
        {
          "title": "Option 3",
          "value": "Option 3"
        }
      ]
    }
  ],

  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "Submit"
      }
    }
  ]
}